       text(u"черепашки без нового года(",300,300)  
def mouseClicked():
    global x,y
    if mouseX > 150 and mouseX < 450 and mouseY > 10 and mouseY < 110:
      x=x+1
    if x>50:
       translate(490,0) 
       noLoop()
       background(255)
       fill(0)
       textSize(30)
       text(u"черепаший новый год спасён!!!",230,300)
       translate(-190,50)
       fill(47,211,133)
       strokeWeight(3)
       ellipse(380,320,30,30)
       ellipse(380,380,30,30)
       ellipse(420,380,30,30)
       ellipse(420,320,30,30)
       ellipse(445,350,40,40)
       ellipse(400,350,80,80)
       strokeWeight(5)
       point(448,343)
       point(448,358)  
