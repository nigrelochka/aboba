x=0
z="pomogi dedy morozy"
y=1800
h="podarit podarki cherepaskam"
def setup():
    size(600,600)
    frameRate(60)
def draw():
    global z,h
    fill(0)
    textAlign(CENTER,CENTER)
    textSize(25)
    text(str (z),150+150,280)
    text(str (h),150+150,320)
    if mouseButton==LEFT: 
      z=""
      h=""  
      background(255)
      global x,y
      y=y-1
      fill(245,124,239)
      rect(100,10,400,75)
      fill(0)
      textAlign(CENTER,CENTER)
      textSize(25)
      text(u"подаренно подарков " + str (x),150+150,110)
      text(u"подарить подарок",150+150,45)
