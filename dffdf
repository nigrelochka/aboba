x=0
s=u"право"
z=u"лево"
def setup():
    global x
    size(600,600)
    strokeWeight(10)
    x=x+random(100,600)
    point(x,random(100,500))
def draw():  
    global x
    textAlign(CENTER,CENTER)
    textSize(40)
    fill(0)  
    text(koordinati(x),300,300)
def koordinati(x):
    if x>300:
        return s  
    else:
        return z   
